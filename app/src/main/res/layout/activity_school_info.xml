<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6B092"
    tools:context=".school_info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="75dp"
                app:srcCompat="@drawable/school_logo"
                android:layout_gravity="center|top"/>

            <TextView
                android:textColor="@color/browny"
                android:id="@+id/textView7"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_marginStart="169dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="170dp"
                android:autoSizeTextType="uniform"
                android:text="BTIHS"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center|top"/>

            <TextView
                android:id="@+id/textView3"
                android:textColor="@color/browny"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginStart="22dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="22dp"
                android:autoSizeTextType="uniform"
                android:justificationMode="inter_word"
                android:text="Bauan Technical Integrated High School, formerly named as Bauan Technical High School, was founded in 1995 by former mayor Bienvenido Castillo. The school's main goal is to produce students who possess skills that are relevant to all industries. It began with two year levels, specifically 1st year and 2nd year high school, with a total of 150 students and 20 teachers. Notably, the 2nd year high school students were transferees from other schools. Over the years, the school has continued to grow and expand its curriculum, providing students with a quality education that prepares them for the workforce."
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>