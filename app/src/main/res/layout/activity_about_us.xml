<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6B092"
    tools:context=".about_us">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="311dp"
                android:layout_height="216dp"
                android:layout_gravity="center|top"
                android:layout_margin="0dp"
                android:padding="0dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView5"
                android:textColor="@color/browny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hammersmith_one"
                android:text="NAVINITES"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="sans-serif-condensed"
                android:justificationMode="inter_word"
                android:text="  This application called EduNav is a capstone project provided by the researchers of Grade 12-STEM B students with the aim of ascertain the navigation-related challenges encountered by Junior and Senior High School students in Bauan Technical Integrated High School. It also aims to describe the development of the digital campus application in terms of planning, design, commision, and maintenance. Furthermore, it requires an evaluation of the digital campus application with regards to safety, beneficence of information, user-friendliness, and compatibility. In addition, we the researchers, compared the assessments of Junior and Senior High School students on the digital campus application. In conclusion, we have implemented the suggestions of others regarding our capstone product for better improvements to the digital campus application."
                android:textColor="@color/browny"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView15"
                android:textColor="@color/browny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="________________________________________________________" />

            <TextView
                android:id="@+id/textView13"
                android:textColor="@color/browny"
                android:fontFamily="@font/hammersmith_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:gravity="center"
                android:textSize="45dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

